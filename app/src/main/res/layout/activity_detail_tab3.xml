<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailTab3">
    <LinearLayout
        android:background="#A9E365"
        android:id="@+id/header"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Passio Coffee"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#633A01"
            android:id="@+id/textviewTen1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iced Americano"/>
        <TextView
            android:layout_below="@+id/textviewTen1"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textColor="#375EEA"
            android:id="@+id/textviewTen2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Espesso, đá viên"/>
        <RatingBar
            android:numStars="5"
            android:rating="5"
            android:id="@+id/ratingbar"
            android:layout_below="@+id/textviewTen2"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_below="@id/ratingbar"
            android:id="@+id/imageviewHinh"
            android:scaleType="centerCrop"
            android:src="@drawable/iced_americano"
            android:layout_marginTop="15dp"
            android:layout_width="150dp"
            android:layout_height="200dp"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/rehonhoantien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="KHUYẾN MÃI ĐỒNG GIÁ"
            android:textColor="#EA477E"
            android:layout_below="@+id/imageviewHinh"/>
        <TextView
            android:id="@+id/textviewGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rehonhoantien"
            android:text="25.000đ"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_below="@id/textviewGia"
            android:id="@+id/buttonGoTo"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/button"
            android:text="ĐẶT NGAY"
            android:textColor="#fff" />
    </RelativeLayout>

</RelativeLayout>