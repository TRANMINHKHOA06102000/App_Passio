<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_sdt">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/bt_back"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_keyboard_backspace"
            android:layout_width="80dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:text="Nhập số điện thoại"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/header"
        android:id="@+id/text1"
        android:text="Nhập số di động"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#7EDC0F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:id="@+id/inputlayout"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp">
        <Button
            android:id="@+id/b1"
            android:text="VN    (+84)"
            android:textSize="15dp"
            android:layout_width="150dp"
            android:layout_height="50dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/inputlayout1"
            android:layout_toRightOf="@+id/b1"
            android:layout_width="200dp"
            android:layout_height="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="số điện thoại"
                android:textColorHint="#67A61C"
                android:textStyle="italic" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/inputlayout"
        android:id="@+id/text2"
        android:text="Nhấn vào tiếp tục để đăng nhập bằng số điện thoại của bạn."
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#AAEF58"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text2"
        android:id="@+id/b_tt"
        android:background="@drawable/button_green"
        android:text="Tiếp tục"
        android:textSize="20dp"
        android:layout_width="280dp"
        android:layout_height="50dp" />
</RelativeLayout>