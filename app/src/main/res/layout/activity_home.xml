<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Home">
    <LinearLayout
        android:background="#4EFA55"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/user"
            android:background="@drawable/ic_sharp_person_outline"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/t1"
            android:text="Khoa"
            android:textSize="25dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/coupon"
            android:layout_marginLeft="50dp"
            android:background="@drawable/ic_baseline_card_giftcard"
            android:layout_width="30dp"
            android:layout_gravity="center_vertical"
            android:layout_height="30dp" />
        <Button
            android:id="@+id/map"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_baseline_person_pin_circle"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <Button
            android:id="@+id/notification"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_baseline_notifications"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <ScrollView
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/h1"
                android:layout_below="@+id/header"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/the"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/the_passio" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:text="CHẠM VÀO THẺ ĐỂ MỞ MÃ TÍCH ĐIỂM"
                    android:layout_gravity="center"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/h2"
                android:layout_below="@+id/h1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="ƯU ĐÃI DÀNH CHO BẠN"
                    android:layout_gravity="left"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_gravity="left"
                    android:src="@drawable/uudai" />
            </LinearLayout>
            <TextView
                android:id="@+id/text3"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/h2"
                android:layout_marginTop="5dp"
                android:textSize="25dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Tin tức"
                android:layout_gravity="left"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                />
            <GridView
                android:layout_marginLeft="20dp"
                android:id="@+id/girdview"
                android:numColumns="1"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="1000dp">
            </GridView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="vertical"
        >
        <Button
            android:layout_marginBottom="20dp"
            android:id="@+id/chonmon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/travel"/>
    </LinearLayout>


</RelativeLayout>