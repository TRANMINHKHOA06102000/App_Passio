<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toTopOf="parent"
    android:orientation="vertical"
    tools:context=".Thethanhvien">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/bt_back"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_keyboard_backspace" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:text="Thẻ thành viên"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/header"
        android:id="@+id/imagethe"
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:src="@drawable/the"/>
    <TextView
        android:id="@+id/csd"
        android:gravity="left"
        android:layout_below="@+id/imagethe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coupon chưa sử dụng (2)"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <ListView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/csd"
        android:id="@+id/ListView"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/all"
        android:gravity="center"
        android:layout_below="@+id/ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem Tất cả Coupon"
        android:textSize="20dp"
        android:textColor="#509104"
        android:textStyle="bold"/>
</RelativeLayout>